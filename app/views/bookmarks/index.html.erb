<% @Title = "liste" %>
<h2>Liste der Favoriten</h2>
<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= link_to bookmark.title, bookmark.url %>
      (<%= link_to "Details", bookmark_path(bookmark) %> |
      <%= link_to "ändern", edit_bookmark_path(bookmark) %> |
      <%= link_to "löschen", bookmark, confirm: "Wollen sie den Datensatz wirklich löschen?", method: :delete %>)
    </li>
  <% end %>
</ul>

<p>
  <%= link_to "Neuen Bookmark erstellen", new_bookmark_path %>
</p>